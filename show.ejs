<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3" >
</div>
  
    <h3> <b> <%= listing.title%></b></h3>

    <div class="card col-6 offset-3 show-card listing-card ">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_img">
        <div class="card-body">
          <p class="card-text">
           <br>
           <%= listing.description%><br>
           &#8377;<%= listing.price%> <br>
           <%= listing.location%><br>
           <%= listing.country%>

        </p>
        </div>
    </div>
   
    <br>
    <div class="btns">
    <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark edit-btn col-1 offset-3">Edit</a>
    <br> <br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-3">Delete</button>
    </form>
</div>
<div class="col-8 offset-3 mt-3">
    <hr>
    <h4>Leave a Review</h4> <br>
  
    <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">

       <label for="rating" class="form-label">Rating</label>
       <input type="range" min="1" max="5" class="form-range"  id="rating" name="review[rating]">

       <label for="comments">comments</label>
       <textarea id="comments" rows="7" class="form-control" name="review[comment]" required></textarea> 
       <div class="invalid-feedback">please submit some comments</div> <br>

     <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>
<hr>
<p><b>All Reviews</b></p>
<div class="row">
<% for (review of listing.reviews) { %>
    <div class="card col-5 ms-3 mt-3">
    <div class="card-body">
        <h5 class="card-title">Jane Doe</h5>
        <p class="card-text"><%= review.comment %></p>
        <p class="card-text"><%= review.rating %>stars</p>
        
    <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
   
       <button class="btn btn-sm btn-dark">Delete</button> 
    </form>
</div>
</div>
 <% } %>
 </div>
</div>
</div>
    



